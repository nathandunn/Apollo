<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
>
    <ui:style>
        .northPanel {
            padding: 0px;
            margin-left: 10px;
        }

        .widgetPanel {
            padding: 5px;
            margin: 5px;
        }

        .tableKeyName {
            font-weight: bolder;
        }

        .cellTable {
            border-bottom: 1px solid #ccc;
            text-align: left;
            margin-bottom: 4px;
            outline: none;
        }

        .rowNorth {
            /*padding-bottom: 10px;*/
            padding-top: 10px;
            margin-bottom: 30px;
        }

        /*Bookmark draggable panel*/

        /*Most CSS in in annotator.css*/
        /*This is here so it init on bind, but otherwise can move  */

        .dragdrop-flow-panel-positioner {
            /*color: blue;*/
            /*color: #396494;*/
            padding-top: 2px;
            color: black;
            font-weight: 200;
        }

        .inline-button {
            margin-right: 0 !important;
            /*padding: 0 !important;*/
            /*border: 0 !important;*/
        }

    </ui:style>
    <gwt:DockLayoutPanel ui:field="layoutPanel">
        <gwt:north size="80">
            <b:Container fluid="true" styleName="{style.northPanel}">
                <!--<b:Row styleName="{style.rowNorth}">-->
                <!--<b:Column size="MD_2">-->
                <!--<gwt:HTML>-->
                <!--<b>Folding</b>-->
                <!--</gwt:HTML>-->
                <!--</b:Column>-->
                <!--<b:Column size="MD_3">-->
                <!--<b:ListBox ui:field="foldType"/>-->
                <!--</b:Column>-->
                <!--<b:Column size="MD_2">-->
                <!--<gwt:HTML><b>Padding</b></gwt:HTML>-->
                <!--</b:Column>-->
                <!--<b:Column size="MD_3">-->
                <!--<b:TextBox ui:field="foldPadding"/>-->
                <!--</b:Column>-->
                <!--<b:Column size="MD_2">-->
                <!--&lt;!&ndash;<b:Button ui:field="goButton"/>&ndash;&gt;-->
                <!--<b:Button text="View" icon="EYE" enabled="true" ui:field="goButton" />-->
                <!--</b:Column>-->
                <!--</b:Row>-->
                <!--<b:Row styleName="{style.rowNorth}">-->
                <!--<b:Column size="MD_3">-->
                <!--<gwt:HTML><b>Reference Track Selector</b></gwt:HTML>-->
                <!--</b:Column>-->
                <!--<b:Column size="MD_6">-->
                <!--<select:Select multiple="true" ui:field="referenceTrackSelector" width="300px" liveSearch="true" showMenuArrow="true"/>-->
                <!--</b:Column>-->
                <!--</b:Row>-->
                <b:Row styleName="{style.rowNorth}">
                    <!--<b:Column size="MD_3">-->
                    <!--<gwt:HTML><b>Search</b></gwt:HTML>-->
                    <!--</b:Column>-->
                    <b:Column size="MD_5">
                        <b:TextBox ui:field="searchBox" enabled="true"
                                   placeholder="Search for Bookmarks"/>
                    </b:Column>
                    <!--<b:Column size="MD_3">-->
                        <!--<b:Button text="Clear Cache" icon="REMOVE" ui:field="clearButton"/>-->
                    <!--</b:Column>-->
                    <b:Column size="MD_6">
                        <b:ButtonGroup dataToggle="BUTTONS" addStyleNames="{style.inline-button}">
                            <!--<b:RadioButton name="AssemblageFilter" text="Scaffold" type="DEFAULT" ui:field="showOnlyScaffoldButton" />-->
                            <!--<b:RadioButton name="AssemblageFilter" text="Combined" type="WARNING" ui:field="showOnlyCombinedButton"/>-->
                            <!--<b:RadioButton name="AssemblageFilter" text="Feature" type="INFO" ui:field="showOnlyFeatureButton"/>-->
                            <!--<b:RadioButton name="AssemblageFilter" text="All" type="DEFAULT" ui:field="showAllAssemblagesButton" />-->
                            <b:RadioButton name="AssemblageFilter" text="Scaffold" type="DEFAULT" ui:field="showOnlyScaffoldButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="Combined" type="WARNING" ui:field="showOnlyCombinedButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="Feature" type="INFO" ui:field="showOnlyFeatureButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="All" type="SUCCESS" ui:field="showAllAssemblagesButton" addStyleNames="{style.inline-button}"/>
                        </b:ButtonGroup>
                    </b:Column>
                </b:Row>
                <b:Row styleName="{style.rowNorth}">
                    <b:Column size="MD_3">
                    <b:Button text="Delete All Bookmarks" icon="TRASH" ui:field="deleteButton"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:north>
        <gwt:center>
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.cellTable}"/>
        </gwt:center>
        <gwt:south size="200">
            <gwt:DockLayoutPanel>
                <gwt:north size="35">
                    <b:Container>
                        <b:Row>
                            <b:Column size="MD_3">
                                <b:ButtonGroup>
                                    <b:Button text="Combine" icon="LOCATION_ARROW" enabled="false"
                                              ui:field="mergeButton"/>
                                    <!--<b:Button text="Duplicate" icon="COPY" enabled="false" ui:field="copyButton"/>-->
                                    <b:Button text="Delete" icon="REMOVE" enabled="false" ui:field="removeButton"/>
                                    <b:Button text="Save" icon="SAVE" enabled="false" ui:field="saveButton"/>
                                    <b:Button text="View" icon="EYE" enabled="false" ui:field="viewButton"/>
                                </b:ButtonGroup>
                            </b:Column>
                        </b:Row>
                    </b:Container>
                </gwt:north>
                <gwt:center>
                    <gwt:AbsolutePanel ui:field="absolutePanel" styleName="{style.dragdrop-flow-panel-positioner}">
                        <gwt:FlowPanel ui:field="dragAndDropPanel"/>
                    </gwt:AbsolutePanel>
                    <!--<gwt:HTML>Drag and Drop manual</gwt:HTML>-->
                </gwt:center>
            </gwt:DockLayoutPanel>
        </gwt:south>

    </gwt:DockLayoutPanel>
</ui:UiBinder>